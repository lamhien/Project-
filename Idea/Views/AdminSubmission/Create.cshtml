@model Idea.Models.Submission

@{
    ViewData["Title"] = "Create Submission";
}

<h1>Create Submission</h1>

<h4>Submission</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Deadline_1" class="control-label"></label>
                <input asp-for="Deadline_1" class="form-control" />
                <span asp-validation-for="Deadline_1" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Deadline_2" class="control-label"></label>
                <input asp-for="Deadline_2" class="form-control" />
                <span asp-validation-for="Deadline_2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa-regular fa-floppy-disk"></i> Create</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
